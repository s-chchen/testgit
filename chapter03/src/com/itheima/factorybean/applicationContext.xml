<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
<!-- 		1、目标类 -->
	<bean id="userDao" class="com.itheima.jdk.UserDaoImpl">	</bean>
<!-- 		2、切面类 -->
	<bean id="myAspect" class="com.itheima.factorybean.MyAspect"></bean>
<!-- 		3、使用Spring代理工厂定义一个名称为userDaoProxy的代理对象 -->
	<bean id="userDaoProxy" class="org.springframework.aop.framework.ProxyFactoryBean">
<!-- 			3.1、指定代理实现的接口 -->
		<property name="proxyInterfaces"
			value="com.itheima.jdk.UserDao"></property>
<!-- 			3.2、指定目标对象 -->
		<property name="target" 
			ref="userDao"></property>
<!-- 			3.3、指定切面，植入环绕通知 -->
		<property name="interceptorNames" 
			value="myAspect"></property>
<!-- 			3.4、指定代理方式，true：cglib代理；false：jdk动态代理 -->
		<property name="proxyTargetClass" 
			value="true"></property>
    </bean>
    <!-- more bean definitions go here -->

</beans>